<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/blog_border">

        <ImageView
            android:id="@+id/imvblogThumb"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/dtt_giangsinh1"/>

        <TextView
            android:id="@+id/txtblogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Xu Hướng Mới: Sử Dụng Sản Phẩm Nhựa Tái Chế - Điểm Nhấn Cho Tương Lai Bền Vững"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtblogShortContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:text="Tác động mạnh mẽ của việc sử dụng nhựa đối với môi trường đã trở thành một vấn đề quan trọng trong thời gian gần đây..."
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đăng: "
                android:textSize="11sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtblogDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="11/04/2024"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>