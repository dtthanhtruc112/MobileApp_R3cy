    <TextView
        android:id="@+id/txt_productcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Số lượng: "
        app:layout_constraintStart_toEndOf="@id/order_productimgv"
        app:layout_constraintTop_toBottomOf="@id/order_productname"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/order_productcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="x1"
        app:layout_constraintStart_toEndOf="@id/txt_productcount"
        app:layout_constraintTop_toBottomOf="@id/order_productname"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/order_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="126.000đ"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@id/order_productcount"
        app:layout_constraintTop_toBottomOf="@id/order_productname"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHorizontal_bias="0.95"

        app:layout_constraintEnd_toEndOf="parent"/>
