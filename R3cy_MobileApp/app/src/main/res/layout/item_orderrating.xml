    <TextView
        android:id="@+id/txtdanhgiasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá sản phẩm"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:textColor="#31B9F4"
        app:layout_constraintTop_toBottomOf="@id/order_productprice"/>
    <EditText
        android:id="@+id/txtproductRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textSize="13sp"
        android:background="@drawable/btn_blue_stroke"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/txtdanhgiasp"
        app:layout_constraintTop_toBottomOf="@id/order_productprice"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_rate"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/txtproductRating"
        app:layout_constraintTop_toBottomOf="@id/order_productprice"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/danhgiasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtdanhgiasp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/faqs_item_question_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/txtdanhgiachitiet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Đánh giá tại đây"
            android:textSize="13sp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/danhgiasp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>