<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangChu"
    android:weightSum="10"
    android:orientation="vertical">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Đăng nhập"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_blue"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="để xem các đơn mua và tích điểm"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                android:orientation="horizontal">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_HomeBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_shopping_bag_24"
                        android:background="@drawable/btn_blue"
                        android:layout_margin="10dp"/>

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_credit_card_24"
                        android:background="@drawable/btn_blue"
                        android:layout_margin="10dp"/>

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_question_mark_24"
                        android:background="@drawable/btn_blue"
                        android:layout_margin="10dp"/>

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_edit_document_24"
                        android:background="@drawable/btn_blue"
                        android:layout_margin="10dp"/>

                    <ImageView android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_fire_truck_24"
                        android:background="@drawable/btn_blue"
                        android:layout_margin="10dp"/>

                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Tra cứu đơn hàng"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Thẻ tích điểm"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Câu hỏi thường gặp"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Custom sản phẩm"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Thu gom"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="10dp"/>


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/table">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục sản phẩm"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="25dp">

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_blue_stroke"
                            android:src="@drawable/phukien" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phụ kiện"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="25dp">

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_blue_stroke"
                            android:src="@drawable/dotrangtri" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phụ kiện"
                            android:textColor="@color/black"
                            android:textSize="11sp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_blue_stroke"
                            android:src="@drawable/dogiadung" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phụ kiện"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                    </LinearLayout>




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Chương trình khuyến mãi"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Sản phẩm bán chạy"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tin tức"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gợi ý cho bạn"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"/>






            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mn_home"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="end|bottom"
        app:itemTextColor="@color/bottom_navigation_style"
        app:itemIconTint="@color/bottom_navigation_style"
        app:labelVisibilityMode="unlabeled"
        android:layout_weight="1"/>

    

</LinearLayout>