<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccount_OrderRating"
    android:padding="15dp">
    <TextView
        android:id="@+id/txtproductname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Móc khoá rùa biển"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/productimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtproductname"/>

    <TextView
        android:id="@+id/productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90.000"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/productimg"/>
    <TextView
        android:id="@+id/productcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/productprice"/>

    <TextView
        android:id="@+id/txtdanhgiasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá sản phẩm"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:textColor="#31B9F4"
        app:layout_constraintTop_toBottomOf="@id/productcount"/>
    <EditText
        android:id="@+id/txtproductRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="4"
        android:textSize="13sp"
        android:background="@drawable/btn_blue_stroke"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/txtdanhgiasp"
        app:layout_constraintTop_toBottomOf="@id/productcount"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_rate"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtproductRating"
        app:layout_constraintTop_toBottomOf="@id/productcount"/>

    <LinearLayout
        android:id="@+id/danhgia_order"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/txtdanhgiasp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/txtdanhgiasp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/faqs_item_question_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/txtdanhgiachitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Đánh giá tại đây"
                android:textSize="13sp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bg" />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
    <Button
        android:id="@+id/btnSaveRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/danhgia_order"
        android:text="Gửi"
        android:backgroundTint="#31B9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mn_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        app:itemIconTint="@color/bottom_navigation_style"
        app:itemTextColor="@color/bottom_navigation_style"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnSaveRating"/>

</androidx.constraintlayout.widget.ConstraintLayout>