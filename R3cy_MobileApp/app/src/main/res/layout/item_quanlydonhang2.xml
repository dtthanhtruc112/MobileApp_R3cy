<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    android:padding="10dp">

    <ImageView
        android:id="@+id/order_productimg"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dgd_dia1"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/order_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Móc khoá hình hải cẩu"
        app:layout_constraintStart_toEndOf="@id/order_productimg"
        app:layout_constraintVertical_bias="0.15"
        />

    <TextView
        android:id="@+id/order_productcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="x1"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/order_productimg"
        app:layout_constraintTop_toBottomOf="@id/order_productname"
        app:layout_constraintVertical_bias="0.55"
        />
    <TextView
        android:id="@+id/order_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="126.000đ"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/order_productcount"
        app:layout_constraintTop_toBottomOf="@id/order_productname"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHorizontal_bias="0.95"

        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@id/order_productprice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>