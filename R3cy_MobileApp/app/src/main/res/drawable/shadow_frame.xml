<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Màu đậm cho đổ bóng -->
            <corners android:radius="10dp" /> <!-- Bán kính cong 10dp -->
        </shape>
    </item>
    <!-- Border -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="#FF000000" /> <!-- Màu đậm cho viền dưới -->
            <corners android:radius="10dp" /> <!-- Bán kính cong 10dp -->
        </shape>
    </item>
    <!-- Outer Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu trong suốt cho viền xung quanh -->
            <stroke
                android:width="1dp"
                android:color="#66000000" /> <!-- Màu nhạt cho viền xung quanh -->
            <corners android:radius="10dp" /> <!-- Bán kính cong 10dp -->
        </shape>
    </item>
</layer-list>
